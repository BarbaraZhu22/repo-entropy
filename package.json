    "typescript",
    "code-review",
    "linter",
    "code-smell"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/repo-entropy-analyzer"
  },
  "homepage": "https://github.com/user/repo-entropy-analyzer#readme",
  "bugs": {
    "url": "https://github.com/user/repo-entropy-analyzer/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "ts-morph": "^24.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "typescript": "^5.6.0"
  }
}
